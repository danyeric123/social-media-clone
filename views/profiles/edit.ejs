
<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <form 
    class="container d-flex flex-column align-items-center"
    action="/profiles/<%= profile._id %>?_method=PUT"
    method="POST"
  >
    <div class="mb-3 w-75">
      <label for="name-input" class="form-label">Name</label>
      <input 
        type="text"
        class="form-control"
        id="name-input"
        name="name"
        value="<%= profile.name %>"
      >
    </div>
    <div class="mb-3 w-75">
      <label for="avatar-input" class="form-label">Avatar</label>
      <input 
        type="url" 
        class="form-control" 
        id="avatar-input"
        name="avatar"
        value="<%= profile.avatar %>"
      >
    </div>
    <div class="mb-3 w-75">
      <label for="bio-input" class="form-label">Bio</label>
      <textarea 
        type="textarea" 
        class="form-control" 
        id="bio-input"
        name="bio"
        value="<%= profile.bio %>"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>

<%- include('../partials/footer') %>